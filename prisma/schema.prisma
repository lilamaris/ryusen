generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Item {
  id             String       @id @default(cuid())
  appId          Int
  contextId      String
  sku            String
  itemKey        String
  name           String
  marketHashName String
  iconUrl        String?
  holders        BotHasItem[]
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@unique([appId, contextId, sku])
  @@index([sku])
}

model BotHasItem {
  id         String   @id @default(cuid())
  botId      String
  itemId     String
  amount     Int
  rawPayload Json
  lastSeenAt DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  bot        Bot      @relation(fields: [botId], references: [id], onDelete: Cascade)
  item       Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@unique([botId, itemId])
  @@index([itemId])
}

model Bot {
  id          String     @id @default(cuid())
  name        String     @unique
  steamId     String     @unique
  accountName String     @unique
  session     BotSession?
  items       BotHasItem[]
  outgoingTradeLegs TradeConsolidationLeg[] @relation("TradeLegFromBot")
  incomingTradeLegs TradeConsolidationLeg[] @relation("TradeLegToBot")
  controlJobs       TradeConsolidationJob[] @relation("ControlBotJobs")
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model BotSession {
  id            String    @id @default(cuid())
  botId         String    @unique
  sessionToken  String
  webCookies    String[]
  expiresAt     DateTime
  lastCheckedAt DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  bot           Bot       @relation(fields: [botId], references: [id], onDelete: Cascade)

  @@index([expiresAt])
}

enum TradeConsolidationJobStatus {
  PLANNED
  COMPLETED
  FAILED
}

enum TradeConsolidationLegStatus {
  PLANNED
  COMPLETED
  FAILED
}

model TradeConsolidationJob {
  id              String                      @id @default(cuid())
  controlBotId    String
  appId           Int
  contextId       String
  sku             String
  requestedAmount Int
  status          TradeConsolidationJobStatus
  failureReason   String?
  createdAt       DateTime                    @default(now())
  updatedAt       DateTime                    @updatedAt
  controlBot      Bot                         @relation("ControlBotJobs", fields: [controlBotId], references: [id], onDelete: Cascade)
  legs            TradeConsolidationLeg[]

  @@index([status])
  @@index([sku])
  @@index([controlBotId])
}

model TradeConsolidationLeg {
  id        String                      @id @default(cuid())
  jobId     String
  fromBotId String
  toBotId   String
  sku       String
  amount    Int
  status    TradeConsolidationLegStatus
  createdAt DateTime                    @default(now())
  updatedAt DateTime                    @updatedAt
  job       TradeConsolidationJob       @relation(fields: [jobId], references: [id], onDelete: Cascade)
  fromBot   Bot                         @relation("TradeLegFromBot", fields: [fromBotId], references: [id], onDelete: Cascade)
  toBot     Bot                         @relation("TradeLegToBot", fields: [toBotId], references: [id], onDelete: Cascade)

  @@index([jobId])
  @@index([fromBotId])
  @@index([toBotId])
}
